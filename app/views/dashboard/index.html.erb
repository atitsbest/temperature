<% @model.sensors.each do |sensor| %>
  <div class="row sensor">
    <div class="col-sm-12">
      <h4 class="name pull-left">
        <%= sensor.name %>
        <small>
          <span class="glyphicon glyphicon-time"></span>
          <%= distance_of_time_in_words_to_now(sensor.last_update) %>
        </small>
      </h4>
      <h3 class="temperature pull-right">
        <%= sensor.current_temperature %><sup>Â°C</sup>
      </h3>
    </div>
    <div class="col-sm-12">
      <div class="chart" data-sensor="<%= sensor.name %>"></div>
    </div>
  </div>
<% end %>
